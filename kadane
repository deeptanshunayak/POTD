int maxSubarraySum(int arr[], int n) {
    int res = arr[0];
    int maxs = arr[0];
    for(int i=1;i<n;i++){
        if(arr[i]>res+arr[i]){
            res = arr[i];
        }
        else{
        res = res + arr[i];
        }
        if(res>maxs){
            maxs = res;
        }
        
        if(res<0){
            res =0;
            
        }
    }
    return maxs;
}
